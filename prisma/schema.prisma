generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Blogs {
  id        String   @id @default(uuid())
  author    String 
  title     String     @unique
  slug      String     @unique
  imageurl String
  imagealt String
  quote String  
  section  String  
  subsection  String
  subsubsection String 
  content Json[]
  seo       Json?    @default("{\"ogTitle\":\"\",\"ogDescription\":\"\",\"metaDescription\":\"\",\"primaryKeywords\":[],\"secondaryKeywords\":[],\"primaryKeywordsNew\":[],\"secondaryKeywordsNew\":[]}")
  creationDate DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
  reviews           Json[]
}
